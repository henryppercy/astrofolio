---
export interface Props {
    color?: "red" | "yellow" | "green" | "lime" | "orange";
}
const { color = "red" } = Astro.props;

const colorClasses = {
    red: `
        bg-red-100 text-red-800 ring-red-600/30
        dark:bg-red-400/10 dark:text-red-400 dark:ring-red-400/20
    `,
    orange: `
        bg-orange-100 text-orange-800 ring-orange-600/30
        dark:bg-orange-400/10 dark:text-orange-400 dark:ring-orange-400/20
    `,
    yellow: `
        bg-yellow-200 text-yellow-900 ring-yellow-700/30
        dark:bg-yellow-400/10 dark:text-yellow-500 dark:ring-yellow-400/20
    `,
    lime: `
        bg-lime-200 text-lime-800 ring-lime-700/30
        dark:bg-lime-400/10 dark:text-lime-400 dark:ring-lime-400/20
    `,
    green: `
        bg-green-200 text-green-800 ring-green-700/30
        dark:bg-green-500/10 dark:text-green-400 dark:ring-green-500/20
    `,
};
---

<span class={`h-fit inline-flex items-center rounded-md px-2 py-1 text-xs font-medium ring-1 ring-inset ${colorClasses[color]}`}>
    <slot/>
</span>
