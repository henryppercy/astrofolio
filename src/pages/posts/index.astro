---
import Layout from '../../layouts/Layout.astro';

export const prerender = true;

import { getCollection } from 'astro:content';
const posts = await getCollection('post');
---

<Layout title="Blog | Henry Percy">
	<main>
		<section class="prose prose-stone dark:prose-invert">
			<h1 class="mb-4 text-3xl font-bold leading-none tracking-tight md:text-4xl">Blog</h1>
			<p>I am writing this blog to document my journey in Software Development, and to reinforce my learning. I will be covering topics and technologies that I am interested in learning or using at the time.</p>
			<ul class="not-prose space-y-4 mt-10">
				{posts
					.filter(post => post.data.published)
					.sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime())
					.slice(0, 3)
					.map(post => (
						<li>
							<a href={`posts/${post.slug}`} class="flex items-baseline space-x-4 group">
								<p class="flex-none group-hover:text-stone-900 group-hover:dark:text-stone-50 transition-colors">{post.data.title}</p>
								<span class="w-full flex-shrink border-t border-dashed border-neutral-300 dark:border-neutral-700"></span>
								<span class="flex-none font-mono text-xs tabular-nums">
									<time datetime={String(post.data.publishDate)}>{post.data.publishDate.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}</time>
								</span>
							</a>
						</li>
					)
				)}
			</ul>
		</section>
	</main>
</Layout>
